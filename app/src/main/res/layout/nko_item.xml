<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/nkoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_17_dp"
        android:layout_marginBottom="@dimen/dimen_17_dp"
        android:fontFamily="@font/roboto_regular"
        android:paddingStart="@dimen/dimen_20_dp"
        android:paddingEnd="@dimen/dimen_8_dp"
        android:singleLine="true"
        android:textColor="@color/black_87"
        android:textSize="@dimen/dimen_16_sp"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:drawableTint="@color/warm_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/random_fond_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
