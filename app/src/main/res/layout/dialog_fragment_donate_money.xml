<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_10_dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:text="@string/dialog_fragment_donate_money_title"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black_87"
        android:textSize="@dimen/dimen_20_sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hintDonationOffer"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:text="@string/dialog_fragment_donate_money_hint_donation_offer"
        android:textColor="@color/black_54"
        android:textSize="@dimen/dimen_16_sp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_12_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/donationOffer"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_10_dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:singleSelection="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hintDonationOffer" >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/donationOffer1"
            android:textSize="@dimen/dimen_12_sp"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_0_dp"
            android:text="@string/dialog_fragment_donate_money_donation_offer_1"
            style="?attr/materialButtonOutlinedStyle" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/donationOffer2"
            android:textSize="@dimen/dimen_12_sp"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_0_dp"
            android:text="@string/dialog_fragment_donate_money_donation_offer_2"
            style="?attr/materialButtonOutlinedStyle" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/donationOffer3"
            android:textSize="@dimen/dimen_12_sp"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_0_dp"
            android:text="@string/dialog_fragment_donate_money_donation_offer_3"
            style="?attr/materialButtonOutlinedStyle" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/donationOffer4"
            android:textSize="@dimen/dimen_12_sp"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_0_dp"
            android:text="@string/dialog_fragment_donate_money_donation_offer_4"
            style="?attr/materialButtonOutlinedStyle" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/hintDonationEditText"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:text="@string/dialog_fragment_donate_money_hint_donation_edittext"
        android:textColor="@color/black_54"
        android:textSize="@dimen/dimen_16_sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_20_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/donationOffer"/>

    <EditText
        android:id="@+id/donationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="7"
        android:textSize="@dimen/dimen_16_sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black_87"
        android:textColorHint="@color/black_38"
        android:hint="@string/dialog_fragment_donate_money_donation_edittext"
        android:layout_marginTop="@dimen/dimen_13_dp"
        android:drawablePadding="@dimen/dimen_10_dp"
        android:drawableStart="@drawable/ic_ruble"
        app:layout_constraintTop_toBottomOf="@id/hintDonationEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>