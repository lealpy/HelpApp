<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            app:collapsedTitleGravity ="center"
            app:statusBarScrim="@color/light_green">

            <ImageView
                android:id="@+id/avatarUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|end"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:srcCompat="@drawable/image_man" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:title="@string/profile_screen_name" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.profile.ProfileFragment" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:fontFamily="@font/roboto_regular"
                android:includeFontPadding="false"
                android:text="@string/profile_user_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextViewPrimary" />

            <TextView
                android:id="@+id/dateOfBirthHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_user_birthday_title"
                android:layout_marginTop="@dimen/dimen_16_dp"
                android:layout_marginStart="@dimen/dimen_20_dp"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextViewHint" />

            <TextView
                android:id="@+id/dateOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_user_birthday"
                android:layout_marginStart="@dimen/dimen_20_dp"
                app:layout_constraintTop_toBottomOf="@+id/dateOfBirthHint"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextViewSecondary" />

            <TextView
                android:id="@+id/fieldOfActivityHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_user_field_of_activity_title"
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:layout_marginStart="@dimen/dimen_20_dp"
                app:layout_constraintTop_toBottomOf="@+id/dateOfBirth"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextViewHint" />

            <TextView
                android:id="@+id/fieldOfActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_user_field_of_activity"
                android:layout_marginStart="@dimen/dimen_20_dp"
                app:layout_constraintTop_toBottomOf="@+id/fieldOfActivityHint"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextViewSecondary" />

            <View
                android:id="@+id/horizontalLine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10_dp"
                app:layout_constraintTop_toBottomOf="@+id/fieldOfActivity"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/getPush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_get_push_title"
                android:layout_marginTop="@dimen/dimen_17_dp"
                android:layout_marginStart="@dimen/dimen_20_dp"
                app:layout_constraintTop_toBottomOf="@+id/horizontalLine1"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextViewSecondary" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_26_dp"
                app:layout_constraintTop_toTopOf="@+id/getPush"
                app:layout_constraintBottom_toBottomOf="@+id/getPush"
                app:layout_constraintStart_toEndOf="@+id/getPush"
                app:layout_constraintEnd_toEndOf="parent"
                tools:checked="true"
                style="@style/Switcher" />

            <View
                android:id="@+id/horizontalLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10_dp"
                app:layout_constraintTop_toBottomOf="@+id/getPush"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/yourFriendsHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_friends_title"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:layout_marginStart="@dimen/dimen_20_dp"
                app:layout_constraintTop_toBottomOf="@+id/horizontalLine2"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextViewHint" />

            <ImageView
                android:id="@+id/avatarFriend1"
                android:layout_width="@dimen/dimen_48_dp"
                android:layout_height="@dimen/dimen_48_dp"
                android:layout_marginTop="@dimen/dimen_16_dp"
                android:layout_marginStart="@dimen/dimen_20_dp"
                app:layout_constraintTop_toBottomOf="@+id/yourFriendsHint"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/avatar_1" />

            <TextView
                android:id="@+id/nameFriend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_friend_3_name"
                android:layout_marginStart="@dimen/dimen_20_dp"
                app:layout_constraintTop_toTopOf="@+id/avatarFriend1"
                app:layout_constraintBottom_toBottomOf="@+id/avatarFriend1"
                app:layout_constraintStart_toEndOf="@+id/avatarFriend1"
                style="@style/TextViewSecondary" />

            <ImageView
                android:id="@+id/avatarFriend2"
                android:layout_width="@dimen/dimen_48_dp"
                android:layout_height="@dimen/dimen_48_dp"
                android:layout_marginTop="@dimen/dimen_16_dp"
                android:layout_marginStart="@dimen/dimen_20_dp"
                app:layout_constraintTop_toBottomOf="@+id/avatarFriend1"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/avatar_2" />

            <TextView
                android:id="@+id/nameFriend2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_friend_2_name"
                android:layout_marginStart="@dimen/dimen_20_dp"
                app:layout_constraintTop_toTopOf="@+id/avatarFriend2"
                app:layout_constraintBottom_toBottomOf="@+id/avatarFriend2"
                app:layout_constraintStart_toEndOf="@+id/avatarFriend2"
                style="@style/TextViewSecondary" />

            <ImageView
                android:id="@+id/avatarFriend3"
                android:layout_width="@dimen/dimen_48_dp"
                android:layout_height="@dimen/dimen_48_dp"
                android:layout_marginTop="@dimen/dimen_16_dp"
                android:layout_marginStart="@dimen/dimen_20_dp"
                app:layout_constraintTop_toBottomOf="@+id/avatarFriend2"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/avatar_3" />

            <TextView
                android:id="@+id/nameFriend3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_friend_1_name"
                android:layout_marginStart="@dimen/dimen_20_dp"
                app:layout_constraintTop_toTopOf="@+id/avatarFriend3"
                app:layout_constraintBottom_toBottomOf="@+id/avatarFriend3"
                app:layout_constraintStart_toEndOf="@+id/avatarFriend3"
                style="@style/TextViewSecondary" />

            <View
                android:id="@+id/horizontalLine3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20_dp"
                app:layout_constraintTop_toBottomOf="@+id/avatarFriend3"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/HorizontalLine" />

            <Button
                android:id="@+id/exitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="@string/profile_logout_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalLine3"
                style="@style/Button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
