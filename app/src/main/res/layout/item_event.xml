<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="@dimen/dimen_17_dp"
    android:paddingBottom="@dimen/dimen_17_dp"
    android:paddingStart="@dimen/dimen_20_dp"
    android:paddingEnd="@dimen/dimen_8_dp" >

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:lines="2"
        android:textColor="@color/black_87"
        android:textSize="@dimen/dimen_16_sp"
        android:gravity="center_vertical"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:drawableTint="@color/warm_grey"
        tools:text="@string/event_item_random_title" />

    <TextView
        android:id="@+id/eventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:singleLine="true"
        android:textColor="@color/black_87"
        android:textSize="@dimen/dimen_12_sp"
        app:drawableTint="@color/warm_grey"
        tools:text="@string/event_item_random_date" />

</androidx.appcompat.widget.LinearLayoutCompat>
