<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="imageViewUser">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">H,18:11</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textViewPrimary" parent="textView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black_ss_app</item>
    </style>

    <style name="textViewSecondary" parent="textView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_ss_app</item>
    </style>

    <style name="textViewHint" parent="textView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_ss_app</item>
    </style>

    <style name="textViewLoading" parent="textView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="horizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="color">@color/cool_grey</item>
    </style>

    <style name="avatar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:indeterminateTint">@color/turtle_green</item>
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="switcher">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">true</item>
        <item name="android:showText">false</item>
        <item name="switchMinWidth">50dp</item>
        <item name="layout_constraintHorizontal_bias">1.0</item>
    </style>

</resources>