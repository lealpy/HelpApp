<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_view">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="text_view_primary" parent="text_view">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black_ss_app</item>
    </style>

    <style name="text_view_secondary" parent="text_view">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_ss_app</item>
    </style>

    <style name="text_view_hint" parent="text_view">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_ss_app</item>
    </style>

    <style name="text_view_loading" parent="text_view">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="horizontal_line">
        <item name="color">@color/cool_grey</item>
    </style>

    <style name="button">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="progress_bar">
        <item name="android:indeterminateTint">@color/turtle_green</item>
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="switcher">
        <item name="android:checked">true</item>
        <item name="android:showText">false</item>
        <item name="switchMinWidth">50dp</item>
        <item name="layout_constraintHorizontal_bias">1.0</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance" >
        <item name="android:fontFamily">@font/officina_sans_extra_bold_scc</item>
        <item name="android:textSize">21sp</item>
    </style>

</resources>